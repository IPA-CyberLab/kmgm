{
	"name": "kmgm",
	"image": "mcr.microsoft.com/devcontainers/go",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/usr/bin/zsh",
					},
				},
			},
			"extensions": [
				"golang.Go"
			]
		}
	},
	"postCreateCommand": "./.devcontainer/postCreate.sh",
	"remoteUser": "vscode"
}
